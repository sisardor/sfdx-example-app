<aura:component implements="force:appHostable">
    <aura:attribute name="options" type="List" default="[
    {'label': 'compressed.tracemonkey-pldi-09.pdf', 'value': 'https://energy-dream-2305-dev-ed.lightning.force.com/resource/1549157318000/myfiles/compressed.tracemonkey-pldi-09.pdf' },
    {'label': 'webviewer-demo-annotated.pdf', 'value': 'https://energy-dream-2305-dev-ed.lightning.force.com/resource/1549157318000/myfiles/webviewer-demo-annotated.pdf'}
    ]"/>

   <!-- Stand-alone static resources -->
   <ltng:require scripts="{!$Resource.lib + '/webviewer.min.js'}" afterScriptsLoaded="{!c.scriptsLoaded}"/>
   <div class="slds-page-header slds-has-bottom-magnet">
      <div class="slds-page-header__row">
         <div class="slds-page-header__col-title">
            <div class="slds-media">
               <div class="slds-media__figure">
                    <lightning:icon iconName="standard:approval" size="medium" alternativeText="approval"/>
               </div>
               <div class="slds-media__body">
                  <div class="slds-page-header__name">
                     <div class="slds-page-header__name-title">
                        <h1>
                           <span class="slds-page-header__title slds-truncate" title="PDFTron WebViewer">PDFTron WebViewer</span>
                        </h1>
                     </div>
                  </div>
                  <!-- <p class="slds-page-header__name-meta">Mark Jaeckal • Unlimited Customer • 11/13/15</p> -->
               </div>
            </div>
         </div>
      </div>
   </div>
   <div>
      <div class="slds-grid">
         <div class="slds-col slds-size_1-of-4 leftRegion slds-var-p-around_small">
            <div class="slds-form-element">
                <h1>Controls</h1>
                <h2>Choose a file to view</h2>
                <lightning:combobox name="progress" label="Status" value="inProgress" placeholder="Select Progress" options="{! v.options }" onchange="{! c.handleChange }"/>
                <select id="select" style="width: 100%">
                    <option value="https://pdftron.s3.amazonaws.com/downloads/pl/webviewer-demo-annotated.pdf">https://pdftron.s3.amazonaws.com/downloads/pl/webviewer-demo-annotated.pdf</option>
                    <option value="https://pdftron.s3.amazonaws.com/downloads/pl/report.docx">https://pdftron.s3.amazonaws.com/downloads/pl/report.docx</option>
                    <option value="https://pdftron.s3.amazonaws.com/downloads/pl/presentation.pptx">https://pdftron.s3.amazonaws.com/downloads/pl/presentation.pptx</option>
                    <option value="../../../samples/files/webviewer-demo-annotated.pdf">../../../samples/files/webviewer-demo-annotated.pdf</option>
                    <option value="../../../samples/files/encrypted-foobar12.pdf">../../../samples/files/encrypted-foobar12.pdf</option>
                </select>
            </div>
         </div>
         <div class="slds-col slds-size_3-of-4 centerRegion">
            <div id='viewer' style='height: 1000px;'></div>
         </div>
      </div>
   </div>
</aura:component>